<Window x:Class="AuroraLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuroraLauncher"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Aurora" Height="307" Width="519" ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <Button x:Name="Login" Content="Login" Margin="0,220,0,0" VerticalAlignment="Top" Width="83" Height="37" HorizontalAlignment="Center" Click="Login_Click"/>
        <TextBox x:Name="Email" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="435" Margin="0,136,0,0"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,173,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="435"/>
        <Image HorizontalAlignment="Center" Height="62" Margin="0,48,0,0" VerticalAlignment="Top" Width="293" Source="/Logo.png" Stretch="Fill"/>
        <Button x:Name="Information" Content="Information" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="InfoClicked"/>

    </Grid>
</Window>
